<div>
    <h1>Eat-Da-Burger!</h1>
</div>
<form class="form-inline" id="create-form">

    <div class="form-group create-form">
        <label for="burg"></label>
        <input type="text" class="form-control" id="burg">
    </div>&nbsp;&nbsp;
    <button type="submit" class="btn btn-default">Create a Burger</button>
</form>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-8">
            <div class="row">

                <div class="col-sm-6" id="to-eat">
                    <h2 class="text-center">burgers to eat!</h2>

                    <ul>
                        {{#each burgers}}
                        <li>
                            <p>{{this.burger_name}}</p>
                        </li>
                        {{/each}} {{!-- {{#each cats}} {{#unless sleepy}} {{> cats/cat-block sleep=true}} {{/unless}} {{/each}} --}}
                    </ul>
                </div>
                <div class="col-sm-1"></div>
                <div class="col-sm-5" id="eaten">
                    <h2 class="text-center">burgers eaten!</h2>
                    <ul>
                        {{!-- {{#each cats}} {{#if sleepy}} {{> cats/cat-block sleep=false}} {{/if}} {{/each}} --}}
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-sm-4">

        </div>
    </div>
</div>