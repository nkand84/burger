<div>
    <h1>Eat-Da-Burger!</h1>
</div>
<form class="form-inline" id="create-form">

    <div class="form-group">
        <label for="burg"></label>
        <input type="text" class="form-control" id="burg">
    </div>&nbsp;&nbsp;
    <button type="submit" class="btn btn-default">Create a Burger</button>
</form>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-8">
            <div class="row">
                <div class="col-sm-1"></div>
                <div class="col-sm-5" id="to-eat">
                    <h2 class="text-center special">burgers to eat!</h2>

                    <ul class="text-center">
                        {{#each burgers}} {{#unless devoured}}
                        <p> {{burger_name}} &nbsp;&nbsp;&nbsp;&nbsp;
                            <button type="submit" id="change-devour" class="btn btn-success btn-devour" data-id="{{id}}"  data-newdevour="{{devour}}">Devour</button>
                        </p>
                        {{/unless}} {{/each}}
                    </ul>
                </div>
                <div class="col-sm-1"></div>
                <div class="col-sm-5" id="eaten">
                    <h2 class="text-center special">burgers eaten!</h2>
                    <ul class="text-center">

                        {{#each burgers}} {{#if devoured}}
                        <p> {{this.burger_name}}</p>
                        {{/if}} {{/each}}

                    </ul>
                </div>
            </div>
        </div>

        <div class="col-sm-4">

        </div>
    </div>
</div>